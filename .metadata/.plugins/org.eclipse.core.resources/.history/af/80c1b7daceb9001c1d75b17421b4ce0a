package bytebank;

public class Conta {
	
	//atributo privado não pode ser modificado e nem lido a não ser pela própria classe
	//encapsulamento
	private double saldo;
	private int agencia;
	private int numero;
	private Cliente titular;
	
	//exemplo de método do tipo conta
	//método sem retorno
	public void deposita(double valor) {
		this.saldo += valor;
	}
	
	//método que retorna um boolean
	public boolean saca(double valor){
		if(this.saldo >= valor) {
			this.saldo -= valor;
			return true;
		} 
		return false;
	}
	
	//utilizando os métodos da própria classe
	public boolean transfere(double valor, Conta destino) {
		if(this.saldo >= valor) {
			this.saca(valor);
			destino.deposita(valor);
			return true;
		}
		return false;
	}
	
	public double getSaldo() {
		return this.saldo;
	}
	
}
