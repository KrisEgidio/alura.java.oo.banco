package bytebank;

public class Conta {
	
	private double saldo;
	int agencia;
	int numero;
	Cliente titular;
	
	//exemplo de método do tipo conta
	//método sem retorno
	public void deposita(double valor) {
		this.saldo += valor;
	}
	
	//método que retorna um boolean
	public boolean saca(double valor){
		if(this.saldo >= valor) {
			this.saldo -= valor;
			return true;
		} 
		return false;
	}
	
	//utilizando os métodos da própria classe
	public boolean transfere(double valor, Conta destino) {
		if(this.saldo >= valor) {
			this.saca(valor);
			destino.deposita(valor);
			return true;
		}
		return false;
	}
	
}
